{% extends 'base.html.twig' %}

{% block title %}{% trans %}Modificar{% endtrans %} {% trans %}Contrato{% endtrans %}{% endblock %}

{% block body %}
    <div class="container small">
        <h5>{% trans %}Modificar{% endtrans %} {% trans %}Contrato{% endtrans %}</h5>
        <div class="col-lg-12">
            <button type="button" class="btn btn-sm btn-success" data-toggle="modal" data-target="#modal_nuevo_proveedor">
                {% trans %}Nuevo{% endtrans %} {% trans %}Proveedor{% endtrans %}
            </button>
            <button type="button" class="btn btn-sm btn-success" data-toggle="modal" data-target="#modal_nuevo_banco">
                {% trans %}Nuevo{% endtrans %} {% trans %}Banco{% endtrans %}
            </button>
            <button type="button" class="btn btn-sm btn-success" data-toggle="modal" data-target="#modal_nueva_area">
                {% trans %}Nueva{% endtrans %} {% trans %}Area{% endtrans %}
            </button>
        </div>

        {% for message in app.flashes('notice') %}
            <div class="alert-info">
                {{ message |trans}}
            </div>
        {% endfor %}

        <br>

        {{ include ('contrato/formulario.html.twig') }}
        {{ include('contrato/_delete_form.html.twig') }}

        {#{ include('contrato/_form.html.twig') }#}
    </div>


{% endblock %}

{% block javascripts %}
    <script src="{{ asset('build/contrato.js') }}"></script>
{% endblock %}