{% extends 'base_escritorio.html.twig' %}

{% block title %}{% trans %}Adicionar{% endtrans %} {% trans %}Contrato{% endtrans %}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('siscofac/vendors/eternicode/bootstrap-datepicker/dist/css/bootstrap-datepicker3.standalone.min.css') }}" />
{% endblock %}

{% block  header %}
    {% trans %}Adicionar{% endtrans %} {% trans %}Contrato{% endtrans %}
    <span class="text-info">{% trans %}Anno{% endtrans %}  {{ anno_actual }} ({{ cantidad_de_contratos_del_anno_actual }})</span>
{% endblock %}

{% block  breadscrum %}
    <div class="breadcrumb-item">{% trans %}Contrato{% endtrans %}</div>
    <div class="breadcrumb-item">{% trans %}Adicionar{% endtrans %} {% trans %}Contrato{% endtrans %}</div>
{% endblock %}


{% block body %}
    <div class="row">
    <div class="form-control">

        <div class="container">
             <div class="row">
                {% include 'contrato/botones_adicionar.html.twig' %}
                {% include 'contrato/botones_contrato.html.twig' %}
             </div>
        </div>

        {% include 'contrato/ventana_modal.html.twig' %}

        {% for message in app.flashes('notice') %}
            <div class="alert-info">
                {{ message |trans}}
            </div>
        {% endfor %}


        <br>
        
        {% include 'contrato/formulario.html.twig' %}

    </div>
    </div>


{% endblock %}

{% block javascripts %}
    <script src="{{ asset('siscofac/vendors/components/jquery/jquery.min.js') }}"></script>
    <script src="{{ asset('build/contrato.js') }}"></script>
    <script src="{{ asset('siscofac/vendors/eternicode/bootstrap-datepicker/js/bootstrap-datepicker.js') }}"></script>
    <script src="{{ asset('siscofac/vendors/eternicode/bootstrap-datepicker/js/locales/bootstrap-datepicker.es.js') }}"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            var configuracion_datepicker = {
                language: "es",
                format: "dd-mm-yyyy",
                todayBtn: true,
                //startDate: "today"
            };
            $('#contrato_fechaInicio').datepicker(configuracion_datepicker);
            $('#contrato_fechaTerminacion').datepicker(configuracion_datepicker);
            $('#contrato_fechaAprobContratoComiteContratacion').datepicker(configuracion_datepicker);
            $('#contrato_fechaAprobContratoComiteAdministracion').datepicker(configuracion_datepicker);
        });
    </script>
{% endblock %}