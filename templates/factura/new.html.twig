{% extends 'base_escritorio.html.twig' %}

{% block title %}{% trans %}Adicionar{% endtrans %} {% trans %}Factura{% endtrans %}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('siscofac/vendors/eternicode/bootstrap-datepicker/dist/css/bootstrap-datepicker3.standalone.min.css') }}" />
{% endblock %}

{% block  header %}
    {% trans %}Adicionar{% endtrans %} {% trans %}Factura{% endtrans %}
{% endblock %}

{% block  breadscrum %}
    <div class="breadcrumb-item">{% trans %}Contrato{% endtrans %}</div>
    <div class="breadcrumb-item">{% trans %}Factura{% endtrans %}</div>
    <div class="breadcrumb-item">{% trans %}Adicionar{% endtrans %} {% trans %}Factura{% endtrans %}</div>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="form-control">
            {% include 'contrato/botones_factura.html.twig' %}
            {% include 'contrato/ventana_modal.html.twig' %}
            {% include 'factura/div_informacion_saldo.html.twig' %}
            {% for message in app.flashes('notice') %}
                <div class="alert-info">
                    {{ message |trans}}
                </div>
            {% endfor %}
            <br>
            {{ include('factura/_form.html.twig') }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('siscofac/vendors/components/jquery/jquery.min.js') }}"></script>
    <script src="{{ asset('siscofac/vendors/eternicode/bootstrap-datepicker/js/bootstrap-datepicker.js') }}"></script>
    <script src="{{ asset('siscofac/vendors/eternicode/bootstrap-datepicker/js/locales/bootstrap-datepicker.es.js') }}"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            var configuracion_datepicker = {
                language: "es",
                format: "dd-mm-yyyy",
                todayBtn: true,
                //startDate: "today"
            };
            $('#factura_fecha').datepicker(configuracion_datepicker);
            $('#factura_fechaCheque').datepicker(configuracion_datepicker);
        });
    </script>
{% endblock %}