<form method="post" action="{{ path('factura_delete', {'id': factura.id,'id_contrato':id_contrato}) }}" onsubmit="return confirm('{{ 'Usted desea eliminar este elemento'|trans }}');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ factura.id) }}">
    <button class="btn btn-sm btn-danger">{% trans %}Eliminar{% endtrans %}</button>
</form>